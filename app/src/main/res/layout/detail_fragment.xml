<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.MainFragment">

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textSize="@dimen/city_name_text_size"
            android:textStyle="bold"
            tools:text="Уфа" />

        <TextView
            android:id="@+id/latLon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/city_latLon_text_size"
            tools:text="0000000/000000" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/city_data_margin"
            android:textSize="@dimen/city_data_text_size"
            tools:text="Ветренно" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/city_data_margin"
            android:textSize="@dimen/city_data_text_size"
            tools:text="Температура: -10" />

        <TextView
            android:id="@+id/feelsLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/city_data_margin"
            android:textSize="@dimen/city_data_text_size"
            tools:text="Ощущается как: -10" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/city_data_margin"
            android:textSize="@dimen/city_data_text_size"
            tools:text="Влажность: 30%" />

    </LinearLayout>

</FrameLayout>